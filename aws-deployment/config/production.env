# Production Environment Configuration for AWS Deployment

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/doubt-system?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (CloudFront URL)
FRONTEND_URL=https://your-cloudfront-domain.cloudfront.net

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# LiveKit Configuration (for video sessions)
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/educational-platform/uploads

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# CloudWatch Configuration
CLOUDWATCH_GROUP_NAME=educational-platform
CLOUDWATCH_STREAM_NAME=backend-logs

